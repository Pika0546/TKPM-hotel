<div class="single-pro-review-area mt-t-30 mg-b-15" style="width: 100%;">
    <div class="container-fluid">
        <div class="product-payment-inner-st">
            <ul id="myTabedu1" class="tab-review-design">
                <li class="active"><a href="#description">Thêm nhân viên</a></li>
            </ul>
            <div id="myTabContent" class="tab-content custom-product-edit">
                <div class="product-tab-list tab-pane fade active in" id="description">
                    <div class="review-content-section">
                        <form id="add-room" method="post" action="/admin/add" class="add-professors">
                            <div class="form-group">
								<label>Tên đăng nhập:<span style="color: #D80027;">*</span></label>
                                <input 
									required="" 
									name="username" 
									type="text" 
									class="form-control" 
									placeholder="Tên đăng nhập"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.username}}"
										{{/if}}
									{{/each}}
								>
                            </div>

                            <div class="form-group">
								<label>Họ và tên:<span style="color: #D80027;">*</span></label>
                                <input 
									required="" 
									name="fullname" 
									type="text" 
									class="form-control" 
									placeholder="Họ và tên"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.fullname}}"
										{{/if}}
									{{/each}}
								>
                            </div>
							
							 <div class="form-group">
								<label>CMND:</label>
                                <input 
									name="identity" 
									type="text" 
									class="form-control" 
									placeholder="Số CMND"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.identity}}"
										{{/if}}
									{{/each}}
								>
                            </div>

                             <div class="form-group">
								<label>Địa chỉ:</label>
                                <input 
									name="address" 
									type="text" 
									class="form-control" 
									placeholder="Địa chỉ"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.address}}"
										{{/if}}
									{{/each}}
								>
                            </div>

                             <div class="form-group">
								<label>Mật khẩu:<span style="color: #D80027;">*</span></label>
                                <input 
									required="" 
									name="password" 
									type="password" 
									class="form-control" 
									placeholder="Mật khẩu"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.password}}"
										{{/if}}
									{{/each}}
								>
                            </div>

                             <div class="form-group">
								<label>Nhập lại mật khẩu:<span style="color: #D80027;">*</span></label>
                                <input 
									required="" 
									name="confirmPassword" 
									type="password" 
									class="form-control" 
									placeholder="Nhập lại mật khẩu"
									{{#each message}}
										{{#if this.success}}
										{{else}}
											value="{{this.data.confirmPassword}}"
										{{/if}}
									{{/each}}
								>
                            </div>

                            <div class="payment-adress">
                                <button type="submit"class="btn btn-primary waves-effect waves-light">Thêm nhân viên</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

