	<script>

		function generateRoom(roomList){
			return roomList.map(room=>{
				return `
					<tr>
						<td>${room.roomId}</td>
						<td>${room.roomtype.typeName}</td>
						<td>${numeral(room.roomtype.price).format('0,0') + " VND"}</td>
						<td>${room.status}</td>
						<td>
							${room.status === "Trống" ? 
								`<a href="/rent/create?room=${room.roomId}" style="color: black;"><button data-toggle="tooltip" title="Thuê phòng" class="pd-setting-ed"><i class="fa fa-check edu-checked-pro" aria-hidden="true"></i></button></a>
								<button data-id="${room.roomId}" title="Xóa" class="pd-setting-ed" data-toggle="modal" data-target="#delete-room-modal"><i class="fa fa-trash-o" aria-hidden="true"></i></button>` : 
								`<a href="/rent/${room.roomId}" style="color: black;"><button data-toggle="tooltip" title="Tình trạng thuê" class="pd-setting-ed"><i class="fa fa-check edu-checked-pro" aria-hidden="true"></i></button></a>`
							}
							<a href="/room/edit/${room.roomId}" style="color: black;"><button data-toggle="tooltip" title="Cập nhật" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
						</td>
					</tr>
				`
			})
		}

		const successCallback = (data) => {
			$("#my-pagination").empty();
			if(data.paginationArray && data.paginationArray.length > 0){
				const pageView = generatePager(data.paginationArray, data.prevPage, data.nextPage, "submitQuery(this)");
				pageView.forEach(page=>{
					$("#my-pagination").append(page);
				});
			
			}
			const roomList = generateRoom(data.room);
			$("#table-body").empty();
			roomList.forEach(room=>{
				$("#table-body").append(room);
			});
		}

		const errorCallback = (error) => {
			console.log(error);
			createAlert("error", "Có lỗi xảy ra, vui lòng thử lại!")
		}

		function submitQuery(ele){
			const data = {};
			data.room = $("input[name='roomId']").val();
			data.typeId = $("select[name='typeId'").val();
			data.status = $("select[name='state']").val();
			data.page = $("input[name='page']:checked").val();
			if(!data.page){
				data.page = '1';
			}
			if(ele && ele.getAttribute("name") !== "page"){
				data.page = '1';
			}
			const newRelativePathQuery = window.location.pathname + '?' + queryString(data);
			history.pushState(null, '', newRelativePathQuery);
			fetchData('get', data, '/room/api', successCallback, errorCallback);
		}
	
		const deleteSuccessCallback = (data) => {
			if(data.success){
				createAlert("success", "Xóa thành công !");
				submitQuery();
			}
			else{
				createAlert("error", data.message)
			}
		}

		$(document).ready(()=>{
			let modalRoomId = null;
			const deleteForm = document.getElementById("delete-room-form");
			document.getElementById("submit-delete-form").addEventListener('click', function(e){
				if(modalRoomId){
					fetchData('post', {modalRoomId}, `/room/api/delete/${modalRoomId}`, deleteSuccessCallback, errorCallback);
				}
				$('#delete-room-modal').modal('hide')
			});
			$('#delete-room-modal').on('show.bs.modal', function (event) {
				const button = $(event.relatedTarget)
				const id = button.data('id')
				const modal = $(this);
				modalRoomId = id;
				modal.find('#modal-text').text(`Xóa phòng ${id} ?`);
			})
		})
	</script>
