    <div class="container-fluid mg-b-15" style="display: flex; flex-direction:column;  width: 100%">
		<div id="search-form" class="sr-input-func" style="width: 100%;">
			<div class="breadcome-heading my-search-row">
				<div class="my-search-group">
					<input 
						type="text" 
						name="roomId"
						placeholder="Nhập mã phòng" 
						id="search-input"
						class="search-int form-control"
						{{#if queryRoom}}
							value="{{queryRoom}}"
						{{/if}}		
					>
					<button type="button" onclick="submitQuery(this)"><i class="fa fa-search"></i></button>
				</div>
			</div>
		</div>
		<div class="row my-search-row" style="position: relative;">
			<div class="col-lg-2 col-md-6 col-sm-6 col-xs-6">
				<h4 style="margin-top: 10px !important">Hiển thị các phòng: </h4>
			</div>
			<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">  
				<select onchange="submitQuery(this)" id="room-type-select" class="form-control" name="typeId">
					<option value="">Tất cả</option>
					{{#each roomTypes}}
						{{#if ../queryType}}
							{{#isEqual this.id ../queryType}}
								<option value="{{this.id}}" selected="">{{this.typeName}}</option>
							{{else}}
								<option value="{{this.id}}">{{this.typeName}}</option>
							{{/isEqual}}
						{{else}}
							<option value="{{this.id}}">{{this.typeName}}</option>
						{{/if}}
					{{/each}}
				</select>
			</div>
			
            <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">  
				<select onchange="submitQuery(this)" id="room-state-select" class="form-control" name="state">
                    <option value="">Tất cả</option>
                    <option value="1" 
						{{#if queryStatus}}
							{{#isEqual "1" queryStatus}}
 								selected=""
							{{/isEqual}}
						{{/if}}
					>Trống</option>
                    <option value="2"
						{{#if queryStatus}}
							{{#isEqual "2" queryStatus}}
 								selected=""
							{{/isEqual}}
						{{/if}}
					>Đang thuê</option>
				</select>
			</div>

			<div class="add-product">
				<a href="/room/add">Thêm phòng</a>
			</div>
		</div>
		<div class="product-status-wrap" style="flex: 1 1 auto; display:flex; flex-direction:column">
			<div class="asset-inner" style="flex: 1 1 auto;">
				<table>
					<thead>
						<tr>
							<th>Phòng</th>
							<th>Loại</th>
							<th>Đơn giá</th>
							<th>Tình trạng</th>
							<th>Hành động</th>
						</tr>
					</thead>
					<tbody id="table-body">
						{{#each room}}
							<tr>
								<td>{{this.roomId}}</td>
								<td>{{this.roomtype.typeName}}</td>
								<td>{{currency this.roomtype.price}}</td>
								<td>{{this.status}}</td>
								<td>
									{{#isEmptyRoom this.status}}
										<a href="/rent/add?room={{this.roomId}}" style="color: black;"><button data-toggle="tooltip" title="Thuê phòng" class="pd-setting-ed"><i class="fa fa-check edu-checked-pro" aria-hidden="true"></i></button></a>
										<button data-id="{{this.roomId}}" title="Xóa" class="pd-setting-ed" data-toggle="modal" data-target="#delete-room-modal"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
									{{else}}
										<a href="/rent/edit/{{this.roomRentId}}" style="color: black;"><button data-toggle="tooltip" title="Tình trạng thuê" class="pd-setting-ed"><i class="fa fa-info-circle" aria-hidden="true"></i></button></a>
									{{/isEmptyRoom}}
									<a href="/room/edit/{{this.roomId}}" style="color: black;"><button data-toggle="tooltip" title="Cập nhật" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
			<div  id="delete-room-modal" class="modal modal-edu-general FullColor-popup-DangerModal fade" role="dialog">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-close-area modal-close-df">
							<a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
						</div>
						<div class="modal-body">
							<span class="educate-icon educate-danger modal-check-pro information-icon-pro"></span>
							<h2 id="modal-text">Xóa phòng này</h2>
							<!-- <p>If you delete this product, they can not access the shop's website anymore.</p> -->
						</div>
						<div class="modal-footer danger-md">
							<button class="btn btn-danger " type="button" data-dismiss="modal">Hủy</button>
							<form method="post" style="display: none;" id="delete-room-form"></form>
							<button class="btn btn-danger" id="submit-delete-form" type="button">Xóa</button>
						</div>
					</div>
				</div>
			</div>
			{{#if paginationArray}}
				<form 	
					method="get"
					action="/room"
				>
					<ul class="my-pagination" id="my-pagination">
						<li class="my-page-item">
							<input onchange="submitQuery(this)" style="display: none;" id="page-prev" value="{{prevPage}}" type="radio" name="page"/>
							<label for="page-prev"  class="my-page-button">Trang trước</label>
						</li>
						{{#each paginationArray}}
							{{#if this.isCurrent}}
								<li class="my-page-item">
									<input checked onchange="submitQuery(this)" style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
									<label for="page-{{this.page}}"  class="my-page-link my-current-page">{{this.page}}</label>
								</li>
							{{else}}
								<li class="my-page-item">
									<input onchange="submitQuery(this)" style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
									<label for="page-{{this.page}}"  class="my-page-link">{{this.page}}</label>
								</li>
							{{/if}}
						{{/each}}
						<li class="my-page-item">
							<input onchange="submitQuery(this)" style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="page"/>
							<label for="page-next"  class="my-page-button">Trang sau</label>
						</li>
					</ul>
				</form>
			{{/if}}
		</div>
