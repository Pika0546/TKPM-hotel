<div class="single-pro-review-area mt-t-30 mg-b-15" style="width: 100%;">
	<div class="container-fluid">
		<div class="product-payment-inner-st">
			<ul id="myTabedu1" class="tab-review-design">
				<li class="active"><a href="#description">Tài khoản</a></li>
			</ul>
			<div id="myTabContent" class="tab-content custom-product-edit">
				<div class="product-tab-list tab-pane fade active in" id="description">
					<div class="review-content-section">
						<form action="/me/change-password" method="post" class="add-professors">
							<div class="sparkline9-graph">
								<div id="pwd-container4">
									<div class="form-group">
										<label for="password">Mật khẩu hiện tại: </label>
										<input 
											type="password" 
											name="password" 
											title="Nhập mật khẩu hiện tại" 
											required="" 
											{{#each message}}
												{{#if this.success}}
												{{else}}
													value="{{this.data.password}}"
												{{/if}}
											{{/each}}
											class="form-control"
										>
									</div>
									<div class="form-group">
										<label for="password4">Mật khẩu mới: </label>
										<input 
											type="password"
											name="newPassword" 
											title="Nhập mật khẩu mới" 
											required="" 
											{{#each message}}
												{{#if this.success}}
												{{else}}
													value="{{this.data.newPassword}}"
												{{/if}}
											{{/each}}
											class="form-control example4" 
											id="password4"
										>
									</div>
									<div class="form-group mg-b-pass">
										<span class="font-bold pwstrength_viewport_verdict4"></span>
										<span class="pwstrength_viewport_progress4"></span>
									</div>
									<div class="form-group">
									</div>
									<div class="form-group">
										<label for="password">Nhập lại mật khẩu mới</label>
										<input 
											type="password"
											name="confirmPassword" 
											title="Nhập lại mật khẩu mới"
											required="" 
											{{#each message}}
												{{#if this.success}}
												{{else}}
													value="{{this.data.confirmPassword}}"
												{{/if}}
											{{/each}}
											class="form-control"
										>
									</div>
								</div>
							</div>
							<div class="payment-adress">
								<button type="submit" onclick="" class="btn btn-primary waves-effect waves-light">Cập nhật</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

