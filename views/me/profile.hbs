                            </div>

                            <div class="form-group">
								<label>Họ tên:</label>
                                <input name="fullname" type="text" class="form-control" value="{{user.fullname}}">
                            </div>

							<div class="form-group">
								<label>CMND:</label>
								<input name="identityNumber" type="text" class="form-control" value="{{user.identityNumber}}">
							</div>
							
							<div class="form-group edit-ta-resize">
								<label>Địa chỉ:</label>
								<input name="address" type="text" class="form-control" value="{{user.address}}">
							</div>
                            <div class="payment-adress">
                                <button type="submit" onclick="" class="btn btn-primary waves-effect waves-light">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

